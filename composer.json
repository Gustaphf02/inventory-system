{
    "name": "inventory/mouser-clone",
    "description": "Sistema de Inventario inspirado en Mouser Electronics",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "slim/slim": "^4.12",
        "slim/psr7": "^1.6",
        "monolog/monolog": "^3.0",
        "vlucas/phpdotenv": "^5.5",
        "firebase/php-jwt": "^6.8",
        "guzzlehttp/guzzle": "^7.8",
        "ramsey/uuid": "^4.7",
        "respect/validation": "^2.2",
        "league/csv": "^9.12",
        "predis/predis": "^2.2",
        "ext-pdo": "*",
        "ext-pdo_pgsql": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Inventory\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Inventory\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "phpcs --standard=PSR12 src/",
        "cs-fix": "phpcbf --standard=PSR12 src/"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
